<lib-layout vcenter row class="app-menu">
  <%= checked_link_to t('.store'), store_root_path,
    is: 'lib-layout-acell', width: 4,
    class: 'lib-buttons-main lib-buttons-black app-store-productAside' %>

  <%= checked_link_to t('.our_story'), page_path('our-story'),
    is: 'lib-layout-acell', width: 4,
    class: 'lib-buttons-main lib-buttons-black' %>

  <lib-layout-cell width="4" gap="2">
    <lib-layout hcenter>
      <%= checked_link_to t('.client_care'), users_profile_path,
        class: 'lib-buttons-small lib-buttons-goldBorder' %>
    </lib-layout>
  </lib-layout-cell>

  <%= checked_link_to store_order_path,
    is: 'lib-layout-acell', width: 4, gap: 2,
    class: 'lib-buttons-main lib-buttons-black' do %>
    <% if current_order.items.empty? %>
      <%= t('.news') %>
    <% else %>
      <%= number_to_currency current_order.total %> &rarr;
    <% end %>
  <% end %>

  <%= checked_link_to store_order_path,
    is: 'lib-layout-acell', width: 4,
    class: 'lib-buttons-main lib-buttons-black' do %>
    <% if current_order.items.empty? %>
      <%= t('.cart') %>
    <% else %>
      <%= number_to_currency current_order.total %> &rarr;
    <% end %>
  <% end %>
</lib-layout>

<% if false %>
  <%= checked_link_to t('.switch_lang'),
    url_for(params.update(locale: (Rails.application.config.i18n_enabled_locales - [I18n.locale]).first)),
    is: 'lib-layout-acell', width: 2, gap: 2,
    class: 'lib-buttons-small lib-buttons-gray' %>

  <%= checked_link_to t('.contacts'), page_path('contacts'),
    is: 'lib-layout-acell', width: 2,
    class: 'lib-buttons-small lib-buttons-gray' %>
<% end %>